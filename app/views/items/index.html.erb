<div class="index">
  <div class="sell-btn">
    <%= link_to "sell an item", items_new_path, class: "create-item-btn" %>
  </div>
  <%= form_with url: items_path, method: :get, class: "d-flex ps-5 pe-5" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "find a item"
    %>
    <%= submit_tag "Search", class: "create-item-btn" %>
  <% end %>

  <div class="item-list">
    <h4><%= "RECOMMENDED ITEMS FOR SALE" %></h4>
  </div>


    <div class="cards d-flex flex-wrap justify-content-around">
      <% @sorted_items.each do |item| %>
        <div class="card m-2 shadow mb-3 bg-body-tertiary rounded" style="width: 25rem;">
          <div class="card-title">
            <div class="card-img">
              <% if item.photo.attached? %>
                <%= cl_image_tag(item.photo.key, width: 398, height: 300, crop: :fill)  %>
              <% end %>
            </div>
            <h3><%= item.item_name %></h3>
            </div>
            <div class="card-body d-flex justify-content-between">
              <%# <li> %>
              <%= link_to "Details", item_path(item), class: "create-item-btn"%>
              <p><%= "$ #{item.price}" %></p>
              <%# </li> %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
